<?xml version="1.0" encoding="utf-8"?>
<PositionLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:id="$+id:ability_add">
    <DirectionalLayout
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="$graphic:backgound_title">

        <Text
            ohos:height="50vp"
            ohos:width="match_content"
            ohos:text="$string:newfile"
            ohos:text_size="20vp"
            ohos:left_padding="10vp"

            >
        </Text>
        <Button
            ohos:height="30vp"
            ohos:width="match_content"
            ohos:left_padding="160vp"
            ohos:text="取消"
            ohos:id="$+id:cancel"
            ohos:text_size="15vp">

        </Button>
        <Button
            ohos:height="30vp"
            ohos:width="match_content"
            ohos:left_padding="10vp"
            ohos:text="保存"
            ohos:id="$+id:save"
            ohos:text_size="15vp">

        </Button>


    </DirectionalLayout>



    <ScrollView
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:position_x="0vp"
        ohos:position_y="50vp"
        ohos:rebound_effect="true"
        >

        <TextField
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:hint="请在此输入"
            ohos:text_color="#FF9EA2A0"
            ohos:text_size="15vp"
            ohos:left_padding="5vp"
            ohos:right_padding="5vp"
            ohos:top_padding="5vp">

        </TextField>

    </ScrollView>






</PositionLayout>